<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fond"
    tools:context=".DetalleEscritorio7">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dell 3681"
        android:layout_gravity="center"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"/>

    <ImageView

        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/escritorio7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:text="CARACTERISTICAS"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Procesador Intel® Core™ i3-10100 de 10.ª generación (núcleo cuádruple, caché de 6 M, de 3,6 GHz a 4,3 GHz) Memoria DDR4 de 4 GB, 1 de 4 GB a 2666 MHz Disco duro 1TB 7200RPM SATA 3
        Sistema Operativo Linux Monitor Dell E1916HV 18.5″ VGA Tarjeta gráfica Intel® UHD 630 con memoria de tarjeta gráfica compartida Conexión inalámbrica WiFi 802.11BGN + Bluetooth 4.0 Puertos: 1 Lector de tarjetas 5 en 1, 1 Conector combinado de audio, 4 USB 2.0, 4 USB 3.2 Gen 1 Type-A, 1 Salida de línea, 1 HDMI, 1 VGA, 1 RJ-45, Ethernet"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
    </TextView>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="REGRESAR"
        android:layout_gravity="center"
        android:background="#755ABB"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:onClick="RegresarEscritorio7"/>

</LinearLayout>
